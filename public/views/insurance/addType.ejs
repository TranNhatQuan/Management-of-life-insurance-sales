  <h2>Form nhập thông tin loại bảo hiểm</h2>
  <form action="/insurance/addType?url=/insurance/listType" method="post">
    <div class="form-group">
      <label for="name">Tên:</label>
      <input type="text" id="name" name="name" required pattern="^\S.{1,253}\S$"
        title="Tên phải có độ dài từ 3 đến 255 ký tự!">
    </div>
    <div class="form-group">
      <label for="info">Thông tin:</label>
      <input type="text" id="info" name="info" required pattern="^\S.{4,}\S$"
        title="Thông tin phải có ít nhất 6 ký tự!">
    </div>
    <div class="form-group">
      <button type="submit">Lưu</button>
    </div>
  </form>




