<body>

  <h2>Tạo sản phẩm chính mới</h2>
  <form action="/insurance/addInsurance?url=/insurance/listInsurance" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Tên:</label>
      <div><input type="text" id="name" name="name" required pattern="^\S.{4,253}\S$"
          title="Tên phải có độ dài từ 6 đến 255 ký tự!"></div>

    </div>
    <div class="form-group">
      <label for="info">Thông tin:</label>
      <div><input type="text" id="info" name="info" required pattern="^\S.{4,}\S$"
          title="Thông tin phải có ít nhất 6 ký tự!"></div>
    </div>
    <div class="form-group">
      <label for="premium">Phí bảo hiểm(nghìn đồng):</label>
      <div><input type="number" id="premium" name="premium" required min="50"></div>

    </div>
    <div class="form-group">
      <label for="premiumPaymentTerm">Thời gian đóng bảo hiểm(tháng):</label>
      <input type="number" id="premiumPaymentTerm" name="premiumPaymentTerm" required min="0">
    </div>
   
    <div class="form-group">
      <label for="insuranceAmount">Giá trị bảo hiểm(nghìn đồng):</label>
      <div> <input type="number" id="insuranceAmount" name="insuranceAmount" required min="1000"></div>

    </div>
    <div class="form-group">
      <label for="contractTerm">Thời hạn bảo hiểm(tháng):</label>
      <input type="number" id="contractTerm" name="contractTerm" required min="1">
    </div>
    
    <div class="form-group">
      <label for="type">Loại bảo hiểm:</label>
      <select id="idType" name="idType" required>
        <% types.forEach(function(type) { %>
          <option value="<%= type.idInsurance_type %>">
            <%= type.name %>
          </option>
          <% }); %>
      </select>
    </div>
    <div class="form-group">
      <label for="image">Thêm ảnh bìa:</label>
      <div> <input type="file" id="image1" name="image1" required></div>
    </div>
    <div class="form-group">
      <label for="image">Thêm ảnh quyền lợi:</label>
      <div> <input type="file" id="image2" name="image2" required></div>
    </div>
    <div class="form-group">
      <button type="submit">Lưu</button>
    </div>
  </form>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


</body>

