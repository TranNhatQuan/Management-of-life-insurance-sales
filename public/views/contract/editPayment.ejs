<!DOCTYPE html>
<html>

<head>
  <title>LIFE</title>
  <link rel="icon" href="../../icon/2764.png" type="image/png">
  <style>
    input {

      border: 1px solid #ccc;
      border-radius: 4px;
    }

    select {
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    select {
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .container {
      border-radius: 10px;
    }

    h3 {
      font-size: smaller;
      opacity: 0.5;
    }

    .form-group {
      margin: 10px;
    }

   

    button {
      display: inline-block;
      padding: 5px;
      background-color: #3f87a6;
      border: none;
      color: #fff;
      font-weight: bold;

      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }
  </style>

</head>

<body>



  <h2>Form sửa thông tin lịch thu phí</h2>
  <form action="/contract/editPayment?url=/contract/listPayment" method="post">

    <div class="form-group">
      <label for="idContract">ID Hợp đồng:</label>
      <div>
        <input type="text" id="idContract" name="idContract" readonly value=" <%=payment_schedule.idContract%>">
        <input type="text" id="index" name="index" readonly hidden value="<%=index%>">
      </div>

    </div>

    <div class="form-group">
      <label for="idStaff">Nhân viên thu:</label>
      <div>
        <input type="text" id="idStaff" name="idStaff" value="<%=idStaff%>">
      </div>

    </div>

    <div class="form-group">
      <label for="info">Thông tin:</label>
      <div>
        <input type="text" id="info" name="info" value="<%=info%>" required>
      </div>

    </div>
    <div class="form-group">
      <label for="index">Kỳ thứ:</label>
      <div>
        <%=index%>
      </div>
    </div>
    <div class="form-group">
      <label for="total">Số tiền:</label>
      <div>
        <%-total%>
      </div>
    </div>



    <div class="form-group">
      <label for="total">Trạng thái:</label>
      <select id="status" name="status" required>

        <option value="0" <%=status===0 ? "selected" : "" %>>
          Đã huỷ
        </option>
        <option value="1" <%=status===1 ? "selected" : "" %>>
          Đã thu
        </option>

        <option value="2" <%=status===2 ? "selected" : "" %>>
          Chưa thu
        </option>
        <option value="3" <%=status===3 ? "selected" : "" %>>
          Đang thu
        </option>
        <option value="4" <%=status===4 ? "selected" : "" %>>
          Phạt lần 1
        </option>
        <option value="5" <%=status===5 ? "selected" : "" %>>
          Phạt lần 2
        </option>
        <option value="6" <%=status===6 ? "selected" : "" %>>
          Phạt lần 3
        </option>
        <option value="7" <%=status===7 ? "selected" : "" %>>
          Hết hạn
        </option>
      </select>
    </div>
    <div class="form-group">
      <button type="submit">Lưu</button>
      <button type="button" onclick="restoreValues()">Phục hồi</button>
    </div>
  </form>




  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    function restoreValues() {
      var idStaff = document.getElementById("idStaff");

      idStaff.value = "<%= idStaff%>";
      var info = document.getElementById("info");

      info.value = "<%= info%>";

      var status = document.getElementById("status");


      status.value = "<%= status %>";
    }
  </script>


</body>

</html>