<!DOCTYPE html>
<html>

<head>
  <title>LIFE</title>
  <link rel="icon" href="../../icon/2764.png" type="image/png">
  <style>
    input {

      border: 1px solid #ccc;
      border-radius: 4px;
    }

    select {
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    select {
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .container {
      border-radius: 10px;
    }

    h3 {
      font-size: smaller;
      opacity: 0.5;
    }

    .form-group {
      margin: 10px;
    }

    #idStaff {
      outline: none;
      border: none;

    }

    button {
      display: inline-block;
      padding: 5px;
      background-color: #3f87a6;
      border: none;
      color: #fff;
      font-weight: bold;

      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }
  </style>

</head>

<body>



  <h2>Form sửa thông tin hợp đồng</h2>
  <form action="/contract/editContract/<%=contract.idContract%>?url=/contract/listContract" method="post"
    enctype="multipart/form-data">
    <p><strong>ID Hợp đồng:</strong>
      <%= contract.idContract %>
    </p>
    <div class="form-group">
      <label for="addPdf">Sửa file pdf:</label>
      <div>
        <input type="file" name="pdfFile" accept=".pdf">

      </div>
    </div>
    <div class="form-group">
      <label for="idStaff">ID Nhân viên:</label>
      <input type="number" id="idStaff" name="idStaff" required value="<%=contract.idStaff%>" min="1">
    </div>
    <div class="form-group">
      <label for="total">Trạng thái:</label>
      <select id="status" name="status" required>

        <option value="0" <%=contract.status==0 ? "selected" : "" %>>
          Đã huỷ
        </option>
        <option value="1" <%=contract.status==1 ? "selected" : "" %>>
          Còn hợp đồng, đang thu phí.
        </option>
        <option value="2" <%=contract.status==2 ? "selected" : "" %>>
          Còn hợp đồng, dừng thu phí.
        </option>
        <option value="3" <%=contract.status==3 ? "selected" : "" %>>
          Hết hợp đồng
        </option>
      </select>
    </div>
    <div class="form-group">
      <button type="submit">Lưu</button>
      <button type="button" onclick="restoreValues()">Phục hồi</button>
    </div>
  </form>




  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    function restoreValues() {

      var status = document.getElementById("status");



      // Khôi phục giá trị ban đầu

      status.value = "<%= contract.status %>";
      var idStaff = document.getElementById("idStaff");



      // Khôi phục giá trị ban đầu

      idStaff.value = "<%= contract.idStaff %>";



    }
  </script>


</body>

</html>