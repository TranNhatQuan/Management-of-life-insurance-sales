<!DOCTYPE html>
<html>

<head>
  <title>LIFE</title>
  <link rel="icon" href="../../icon/2764.png" type="image/png">
  <style>
    h3 {
      font-size: smaller;
      opacity: 0.5;
    }

    .form-group {
      margin: 10px;
    }

    #idStaff {
      outline: none;
      border: none;

    }

    button {
      display: inline-block;
      padding: 5px;
      background-color: #3f87a6;
      border: none;
      color: #fff;
      font-weight: bold;

      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }

    input {

      border: 1px solid #ccc;
      border-radius: 4px;
    }

    select {
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .container {
      border-radius: 10px;
    }
  </style>

</head>

<body>



  <h2>Form nhập thông tin khách hàng</h2>
  <form id="your-form-id" action="/user/add?url=/user/listUser" method="post">
    <div class="form-group">
      <label for="name">Tên:</label>
      <input type="text" id="name" name="name" required pattern="^\S.{4,48}\S$"
        title="Tên phải có độ dài từ 6 đến 50 ký tự.">
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="phone">Số điện thoại:</label>
      <input type="text" id="phone" name="phone" required pattern="0\d{9,10}"
        title="Số điện thoại không hợp lệ. Vui lòng nhập số điện thoại Việt Nam có độ dài 10 hoặc 11 số và bắt đầu bằng số 0.">
    </div>
    <div class="form-group">
      <label for="idCard">CCCD/CMND:</label>
      <input type="text" id="idCard" name="idCard" required pattern="[0-9]{9}|[0-9]{12}"
        title="CCCD/CMND phải có 9 hoặc 12 chữ số.">
    </div>
    <div class="form-group">
      <label for="address">Địa chỉ:</label>
      <input type="text" id="address" name="address" required pattern="^\S.{5,253}\S$"
        title="Địa chỉ phải có độ dài từ 7 đến 255 ký tự.">
    </div>
    <div class="form-group">
      <label for="username">Tên tài khoản:</label>
      <input type="text" id="username" name="username" required pattern="^\S.{4,48}\S$"
        title="Tên tài khoản có độ dài từ 6 đến 50 ký tự.">
    </div>
    <div class="form-group">
      <label for="password">Mật khẩu:</label>
      <input type="password" id="password" name="password" required pattern="^\S.{4,48}\S$"
        title="Mật khẩu có độ dài từ 6 đến 50 ký tự.">
    </div>
    <div class="form-group">
      <label for="rpPassword">Xác nhận:</label>
      <input type="password" id="rpPassword" name="rpPassword" required pattern="^\S.{4,48}\S$"
        title="Mật khẩu có độ dài từ 6 đến 50 ký tự.">
      <p id="error-message" style="color: red;"></p> <!-- Thêm phần tử p để hiển thị thông báo lỗi -->
    </div>


    <div class="form-group">
      <button type="submit">Lưu</button>
    </div>
  </form>




  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <script>
    const passwordField = document.getElementById('password');
    const rpPasswordField = document.getElementById('rpPassword');
    const form = document.getElementById('your-form-id'); // Thay 'your-form-id' bằng ID của form
    rpPasswordField.addEventListener('input', function () {
      const passwordValue = passwordField.value;
      const rpPasswordValue = rpPasswordField.value;
      const errorMessage = document.getElementById('error-message');

      if (passwordValue !== rpPasswordValue) {
        errorMessage.innerText = "Mật khẩu không trùng khớp.";
      } else {
        errorMessage.innerText = "";
      }
    });
    form.addEventListener('submit', function (event) {
      const passwordValue = passwordField.value;
      const rpPasswordValue = rpPasswordField.value;

     if (passwordValue !== rpPasswordValue) {
   
        event.preventDefault(); // Ngăn chặn việc submit
      }
    });
  </script>

</body>

</html>